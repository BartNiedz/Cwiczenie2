@model FormData

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

   
    <form action="/Form/FormView" method="post" class="row">
      
        <div class="container row">
            <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                <label for="exampleFormControlInput1">Adres e-mail</label>

                <input type="email" class="form-control" name="email" id="exampleFormControlInput1" placeholder="adres@email.com">
            </div>
            <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                <label for="exampleFormControlInput1">Wprowadź imię</label>
                <input type="name" class="form-control" name="firstName" id="exampleFormControlInput1" placeholder="Imię">
            </div>
            <div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-4 col-xxl-4">
                <label for="exampleFormControlInput1">Wprowadź nazwisko</label>
                <input type="name" class="form-control" name="lastName" id="exampleFormControlInput1" placeholder="Nazwisko">
            </div>
        </div>
        <div class="container form-group">
            <label class="my-2" for="exampleFormControlTextarea1">Treść wiadomości</label>
            <textarea class="form-control" name="textarea" id="exampleFormControlTextarea1" rows="5" placeholder="Napisz w jakiej sprawie chciałbyś się z nami skontaktować :)"></textarea>
            <div class="text-center"><input type="submit" value="Wyślij" class="btn btn-success mt-2"></input></div>
        </div>

    </form>
</body>
</html>

