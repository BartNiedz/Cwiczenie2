@model WolneLekturyCwiczenia.Models.SQL.Table.Category
@{
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <form action="/Kategorie/EditCategory" method="post">
                @Html.HiddenFor(xa=>xa.CategoryId)
                <div class="mb-3">
                    <label class="form-label">Edytuj url</label>
                    <input type="name" asp-for="Url" class="form-control" placeholder="url">
                </div>
                <div class="mb-3">
                    <label class="form-label">Edytuj href</label>
                    <input type="name" asp-for="Href" class="form-control" placeholder="href">
                </div>
                <div class="mb-3">
                    <label class="form-label">Edytuj name</label>
                    <input type="name" asp-for="Name" class="form-control" placeholder="name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Edytuj slug</label>
                    <input type="name" asp-for="Slug" class="form-control" placeholder="slug">
                </div>
                <button type="submit" class="btn btn-success">Zastosuj zmiany</button>

            </form>
        </div>
    </div>
</div>