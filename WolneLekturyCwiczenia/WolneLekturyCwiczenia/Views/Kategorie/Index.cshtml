@model List<Categories>
@{

}
@foreach (var kategoria in Model)
{
    <div class="row m-2">
        <div class="col-6" style="border: 1px solid black; border-radius: 5px; background-color:antiquewhite">
            <a href="/Kategorie/KategorieAudiobooks?kategoria=@kategoria.name">@kategoria.name</a>
        </div>
        <div class="col-6" style="border: 1px solid black; border-radius: 5px; background-color:antiquewhite">
            <a href="@kategoria.href">@kategoria.href</a>
        </div>
    </div>
    
}
<div class="row" style="text-align:center; display:block;">
    @if (ViewBag.Previous > 0)
    {
        <a type="button" class="btn btn-outline-secondary col-6"
           href="/kategorie/index?page=@ViewBag.Previous" style="width:auto">Poprzednia</a>
    }

    @if (ViewBag.Next <= ViewBag.LiczbaStron)
    {
        <a type="button" class="btn btn-outline-secondary col-6"
           href="/kategorie/index?page=@ViewBag.Next" style="width:auto">Następna</a>
    }

</div>