@model List<Audiobooks>

<div class="row container-fluid">
        
@foreach (var audiobooks in Model)
{
        <div class="col-2" style="padding:0px;">

            <div style="border-radius:5px; border: 1px solid black; background-color:antiquewhite; height:450px; margin:5px;">
                <a href="/Audiobook/Details?detale=@audiobooks.slug"><img class="img-fluid p-1" src="@audiobooks.simple_thumb" /></a>

                <p class="text-center">@audiobooks.author</p>
   <p class="text-center">@audiobooks.genre</p>
   <p class="text-center">@audiobooks.title</p>
   <p class="text-center">@audiobooks.epoch</p>

   </div>

        </div>
}
       
</div>